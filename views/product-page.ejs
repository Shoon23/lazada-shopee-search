<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Search Result</title>
    <link rel="stylesheet" href="/css/product-page.css" />
  </head>
  <body>
    <main>
      <header>
        <img class="logo" src="/img/main-logo.png" alt="" />
        <form method="POST">
          <div class="search-input-wrapper">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"
              />
            </svg>
            <input type="text" name="searchKey" value="<%= searchKey %>" />
          </div>
        </form>
      </header>
      <section>
        <ul class="product-panel">
          <% products.forEach(element => { %>
          <li class="product-card">
            <a href="<%= element.productLink %>">
              <img
                class="product-img"
                src="<%= element.productImage  %>"
                alt=""
              />
              <h6 class="product-name"><%= element.productName %></h6>
              <div class="price-wrapper">
                <p class="price"><%= element.productPrice %></p>
                <p class="sold"><%= element.productSold %></p>
              </div>
            </a>
          </li>
          <% }); %>
        </ul>
      </section>
    </main>
  </body>
</html>
